<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/trip_list_stop_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some text"
        app:layout_constraintBottom_toTopOf="@+id/trip_list_stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/trip_list_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Trip Data"
        android:backgroundTint="#193E6E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_list_stop_header" />

</androidx.constraintlayout.widget.ConstraintLayout>